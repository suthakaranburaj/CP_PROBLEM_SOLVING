{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "build active cpp with g++ 15.1.0",
      "type": "shell",
      "command": "C:/mingw64/bin/g++.exe",
      "args": [
        "-std=c++17",
        "${file}",
        "-o",
        "${fileDirname}/${fileBasenameNoExtension}.exe"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$gcc"],
      "detail": "Build active C++ file with the latest g++"
    }
  ]
}
